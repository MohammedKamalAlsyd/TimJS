{
  "manifest_version": 3,
  "name": "TimJS",
  "version": "1.0.0",
  "description": "TrackJS is an AI-powered browser tool that helps you understand and improve your online behavior.",
  "icons": {
    "16": "src/assets/icons/clock.png",
    "48": "src/assets/icons/clock.png",
    "128": "src/assets/icons/clock.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent" 
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/MainScrapper.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["src/content/YoutubeScrapper.js"]
    }
  ] 
  
}